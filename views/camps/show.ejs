<% include ../partials/header.ejs %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp!</p>
                <div class="list-group">
                    <li class="list-group-item active "> item 1</li>
                    <li class="list-group-item ">item 2</li>
                    <li class="list-group-item ">item 3</li>
                </div>
            </div>
            
            <div class="col-md-9">
                
                <div class="card" style="width: 100%;">
                    <img class="card-img-top" src="<%= foundCamp.img %>" >
                    <div class="card-body">
                        <h1 class="card-title"><strong><%= foundCamp.name %></strong></h1>
                        <h3 class="card-subtitle mb-2 text-muted" style="text-align: right">12.0$/night</h3>
                        <h4 class="card-text"><%= foundCamp.desc %>.</h4>
                    </div>
                </div>
                <br>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"  style="display: inline;">Comments</h3>
                        <a href="/camps/<%=foundCamp._id%>/comments/new"><button  class="btn btn-success pull-right">Leave a review!</button></a>             
                    </div>

                    <div class="panel-body">
                        <% foundCamp.comments.forEach(function(comment){ %>
                            <div class="ui comments">

                                <div class="comment">                        
                                    <div class="content">

                                        <a class="author"><%= comment.author %></a>
                                        
                                        <div class="metadata">
                                            <span class="date">Today at 5:42PM</span>
                                        </div>

                                        <div class="text">
                                            <p><%= comment.text %></p> 
                                        </div>                            

                                    </div>
                                </div>

                            </div> 
                        <% }) %>
                    </div>
                </div>               

            </div>

        </div>
    </div> 